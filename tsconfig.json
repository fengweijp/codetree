{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017", "webworker"],
    "declaration": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "rootDir": ".",
    "strict": true,
    "noImplicitReturns": true,
    // Looser strict checks are required for code generated by antlr4ts.
    // Unfortunately, there is no way to limit this to just antlr4ts-generated
    // files. See https://github.com/Microsoft/TypeScript/issues/8082.
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
